generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// prisma/schema.prisma
model MpesaCode {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  phone     String
  amount    String
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id           Int      @id @default(autoincrement())
  phone        String   @unique
  token        String
  package      String
  status       String
  pkgExpiry    DateTime
  pkgCreatedAt DateTime @default(now())
  pkgUpdatedAt DateTime @updatedAt
}
